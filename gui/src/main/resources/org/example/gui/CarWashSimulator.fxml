<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gui.CarWashSimulatorController">

    <top>
      <VBox styleClass="vbox">
         <children>
               <Label styleClass="footer-text" text="Car Wash &amp; Gas Station Simulator" />
              <HBox spacing="10" styleClass="top-bar">
                  <Label styleClass="top-label" text="Waiting area capacity:" />
                  <TextField fx:id="capacityField" prefWidth="60" styleClass="top-input" />
      
                                          <Label styleClass="top-label" text="Number of pumps:" />
                  <TextField fx:id="pumpsField" prefWidth="60" styleClass="top-input" />
      
                                          <Button fx:id="startBtn" styleClass="start-btn" text="Start Simulation" />
                  <Button fx:id="stopBtn" disable="true" styleClass="stop-btn" text="Stop Simulation" />
                  <Button fx:id="resetBtn" styleClass="reset-btn" text="Reset" />
              </HBox>
         </children>
      </VBox>
    </top>

    <!--CENTER MAIN CONTENT -->
    <center>
        <HBox spacing="10" styleClass="main-area">
            <!-- LEFT SIDE -->
            <VBox prefWidth="750" spacing="15">
            <HBox spacing="480.0">
               <children>
                      <Label prefHeight="19.0" prefWidth="170.0" styleClass="section-title" text="Waiting Queue" />
                  <Button fx:id="addCarButton" prefHeight="23.0" prefWidth="98.0" styleClass="addCarButton" text="Add Car" />
               </children>
            </HBox>
                <VBox fx:id="queueContainer" minHeight="113.0" prefHeight="113.0" prefWidth="750.0" styleClass="queue-container">
                    <Label styleClass="queue-empty-label" text="Queue Empty" />
                </VBox>
                <Label fx:id="queueStatusLabel" styleClass="queue-status" text="Queue: 0/0" />

                <Label styleClass="section-title" text="Service Bays (Pumps)" />
                <FlowPane fx:id="pumpsContainer" hgap="10" prefHeight="273.0" prefWidth="750.0" styleClass="pumps-container" vgap="10" />

                <!-- BOTTOM STATS BAR -->
                <HBox alignment="BOTTOM_CENTER" spacing="30" styleClass="stats-bar">
                    <Label fx:id="arrivedLabel" styleClass="stat-blue" text="Total cars arrived: 0" />
                    <Label fx:id="servicedLabel" styleClass="stat-green" text="Cars serviced: 0" />
                    <Label fx:id="waitingLabel" styleClass="stat-orange" text="Cars waiting: 0" />
                </HBox>
            </VBox>

            <!-- RIGHT SIDE -->
            <VBox prefWidth="320" spacing="10" styleClass="log-panel">
                <Label styleClass="log-title" text="Activity Log" />
                <TextArea fx:id="logArea" editable="false" prefHeight="420" styleClass="log-area" wrapText="true" />
                <Button fx:id="clearLogBtn" styleClass="clear-btn" text="Clear Log" />
            </VBox>
        </HBox>
    </center>

    <!-- BOTTOM STATUS BAR -->
    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="footer-bar" />
    </bottom>
</BorderPane>
